@{
    ViewData["Title"] = "Chat with OpenAI";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="query" class="form-label">Enter your query:</label>
                        <input type="text" id="query" name="query" class="form-control" placeholder="Ask something..." />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

                @if (ViewBag.Response != null)
                {
                    <div class="mt-3 alert alert-info">
                        <h4>Response:</h4>
                        <p>@ViewBag.Response</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional for any dynamic behavior you may want later) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
